<h1 class="mb-1 restaurant-show-title">{{restaurantsInfo.name}}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{restaurantsInfo.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{restaurantsInfo.location}}
        <a href={{restaurantsInfo.google_map}} class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{restaurantsInfo.phone}}
      </p>

      <p class="mb-5">
        {{restaurantsInfo.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src={{restaurantsInfo.image}} alt={{restaurantsInfo.name}}
        style="max-width: 600px;">
    </div>
  </div>
</div>